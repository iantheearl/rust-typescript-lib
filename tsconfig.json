{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "outDir": "./dist",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": ".",
    "strict": true,
    "target": "es2018",
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/node_modules",
    "**/build",
    "**/dist",
    "**/*.md",
    "**/rollup.config.js"
  ]
}
