{
  "author": "Ian Huang <ian1314159@gmail.com>",
  "name": "rust-typescript-template",
  "version": "0.1.8",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "prepare": "husky install",
    "predev": "wasm-pack build --out-name index --target web",
    "dev": "npm-run-all --parallel \"dev:rs\" \"dev:ts\"",
    "dev:ts": "npm run build -- -w",
    "dev:rs": "cargo watch -w core -s \"wasm-pack build --out-name index --target web\"",
    "test": "cargo test && wasm-pack test --headless",
    "build": "npm run clean && rollup -c",
    "lint": "eslint . --ext .ts",
    "example": "cd example && webpack-dev-server --open",
    "deploy": "cd example && webpack && cd .. && node publish.js"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.1.2",
    "@rollup/plugin-typescript": "^8.3.0",
    "@rollup/plugin-wasm": "^5.1.2",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "@wasm-tool/rollup-plugin-rust": "^1.0.7",
    "copy-webpack-plugin": "^10.2.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "gh-pages": "^3.2.3",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "rollup": "^2.63.0",
    "rollup-plugin-base64": "^1.0.1",
    "rollup-plugin-dts": "^4.1.0",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.1",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4",
    "wasm-pack": "^0.9.1",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.2"
  },
  "lint-staged": {
    "{src,example}/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "pretty-quick --staged"
    ]
  }
}
